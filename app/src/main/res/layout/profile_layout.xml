<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView style="@style/CustomTitle"
        android:text="Personal Details" />

    <com.google.android.material.card.MaterialCardView style="@style/CustomCardStyles">

        <LinearLayout style="@style/CustomVerticalLinearLayout">
            <TextView
                android:id="@+id/user_name"
                style="@style/CustomParagraph"
                android:text="Jesse Sravya" />
            <TextView
                android:id="@+id/user_age"
                style="@style/CustomParagraph"
                android:text="38 years old" />
            <TextView
                android:id="@+id/user_gender"
                style="@style/CustomParagraph"
                android:text="Female" />

            <View style="@style/CustomDivider" />

            <TextView
                android:id="@+id/user_address"
                style="@style/CustomParagraph"
                android:text="Home address: Plot NO: 645, Rd Number 36, Beside Tonique, Jubilee Hills, Hyderabad, Telangana 500033" />
            <View style="@style/CustomDivider" />

            <TextView
                android:id="@+id/user_contact"
                style="@style/CustomParagraph"
                android:text="Ph no. +11 822131233981" />

            <TextView
                style="@style/CustomParagraph"
                android:layout_weight="1"
                android:text="Life insurance:" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView style="@style/CustomTitle"
        android:text="Medical Details" />

    <com.google.android.material.card.MaterialCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/CustomCardStyles">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow android:weightSum="3">
                <TextView
                    style="@style/CustomParagraph"
                    android:layout_weight="1"
                    android:text="Allergies:" />
                <TextView
                    android:layout_weight="2"
                    style="@style/CustomParagraph"
                    android:text="None" />
            </TableRow>

            <TableRow android:weightSum="3">
                <TextView
                    style="@style/CustomParagraph"
                    android:layout_weight="1"
                    android:text="Blood group:" />
                <TextView
                    android:layout_weight="2"
                    style="@style/CustomParagraph"
                    android:text="B+" />
            </TableRow>

            <TableRow android:weightSum="3">
                <TextView
                    style="@style/CustomParagraph"
                    android:layout_weight="1"
                    android:text="Medical conditions:" />
                <TextView
                    android:layout_weight="2"
                    style="@style/CustomParagraph"
                    android:text="Diabetes" />
            </TableRow>

            <TableRow android:weightSum="3">

                <TextView
                    android:layout_weight="2"
                    style="@style/CustomParagraph"
                    android:text="LWS #225829" />
            </TableRow>

        </TableLayout>
    </com.google.android.material.card.MaterialCardView>


    <TextView style="@style/CustomTitle"
        android:text="Emergency Contacts"
        android:layout_marginBottom="18dp"/>

    <com.google.android.material.card.MaterialCardView
        style="@style/CustomCardStyles"
        android:layout_marginVertical="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="9dp">

        <LinearLayout style="@style/CustomVerticalLinearLayout">

            <TextView
                style="@style/CustomParagraph"
                android:text="Parvesh" />

            <TextView
                style="@style/CustomParagraph"
                android:text="Jesse's father" />

            <TextView
                style="@style/CustomParagraph"
                android:text="Ph no. +11 822131233981" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/CustomCardStyles"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="18dp">

        <LinearLayout style="@style/CustomVerticalLinearLayout">
            <TextView
                style="@style/CustomParagraph"
                android:text="Raman" />
            <TextView
                style="@style/CustomParagraph"
                android:text="Jesse's colleague" />
            <TextView
                style="@style/CustomParagraph"
                android:text="Ph no. +11 822131233981" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Settings"
            android:textAllCaps="true"
            android:paddingBottom="20dp"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
